
<div class="mx-auto mt-5" style="width: 600px">
  <%= simple_form_for(@restaurant) do |f| %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category, collection: Restaurant::CATEGORIES %>
    </div>

    <div class="form-actions mb-3" >
      <%= f.button :submit, "Add a restaurant", class: "btn btn-primary" %>
    </div>
    <% end %>

  <%= link_to "Back to list", restaurants_path, class: "btn btn-secondary" %>
</div>
